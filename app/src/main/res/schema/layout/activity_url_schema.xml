<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_schema_back"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="뒤로가기 버튼"
            android:paddingStart="35dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/icon_back_arrow" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_run_package"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="실행 하고자 하는 앱 패키지 명을 입력하세요."
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_run_package"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="입력한 대상 패키지 앱 실행" />

    <EditText
        android:id="@+id/et_schema_send_id"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="요청 아이디를 입력해 주세요."
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_schema_send_msg"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="요청 메세지를 입력해 주세요."
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/tv_schema_res_msg"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="응답 메세지가 표시됩니다." />

    <Button
        android:id="@+id/btn_url_schema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="URL 스키마 이용 앱 실행" />

</LinearLayout>