<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_noti_back"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="뒤로가기 버튼"
            android:paddingStart="35dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/icon_back_arrow" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="번호 : "
            android:textSize="25dp" />

        <EditText
            android:id="@+id/et_noti_tel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:ems="10"
            android:hint="전화번호 입력하새우"
            android:inputType="phone"
            android:textSize="25dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_noti_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="기본 알람 통지" />

    <Button
        android:id="@+id/btn_noti_extend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="빅 픽쳐 스타일 알림 통지" />

    <Button
        android:id="@+id/btn_noti_inbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="인박스 스타일 알림 통지" />

    <Button
        android:id="@+id/btn_noti_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="다이얼로그 알림 통지" />

    <Button
        android:id="@+id/btn_fcm_token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FCM 토큰 확인" />

</LinearLayout>